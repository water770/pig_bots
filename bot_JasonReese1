def choice(round_score, my_score, opponent_score):
    if my_score >= 90:
        if round_score >= 10:
            return False
        if round_score < 10:
            return True
    if opponent_score > my_score:
        if round_score <= 15:
            return True
        if round_score >= 15:
            return False
        if ((opponent_score - my_score) + 5) < round_score:
            return True
        if ((opponent_score - my_score) + 5) >= round_score:
            return False
